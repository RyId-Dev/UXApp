<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ExpBkg">

    <TextView
        android:id="@+id/expText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:fontFamily="@font/segoe_ui"
        android:gravity="center"
        android:text="@string/exptext_text"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expTitle"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/expTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/segoe_ui_bold"
        android:gravity="center_horizontal"
        android:text="@string/exptitle_text"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/beginBtn"
        android:layout_width="117dp"
        android:layout_height="44dp"
        android:layout_marginTop="36dp"
        android:layout_weight="1"
        android:background="#95A2BE"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="@string/beginTxt"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.0" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="411dp"
        android:layout_height="395dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:stretchColumns="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expText"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5sp">

            <TextView
                android:id="@+id/similBTi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/segoe_ui_bold"
                android:gravity="center"
                android:text="@string/ext1"
                android:textColor="@color/red"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/contBTi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/segoe_ui_bold"
                android:gravity="center"
                android:text="@string/ext2"
                android:textColor="@color/red"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/closBTi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/segoe_ui_bold"
                android:gravity="center"
                android:text="@string/ext3"
                android:textColor="@color/red"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/similBtn"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="4sp"
                android:paddingRight="4sp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/similarityimg"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/contBtn"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="4sp"
                android:paddingRight="4sp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/continuationimg"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/closBtn"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="4sp"
                android:paddingRight="4sp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/closureimg"
                tools:ignore="ContentDescription" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5sp">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/proxBTi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/segoe_ui_bold"
                android:gravity="center"
                android:paddingBottom="5sp"
                android:text="@string/ext4"
                android:textColor="@color/red"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/proxBtn"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@null"
                android:cropToPadding="true"
                android:paddingTop="4sp"
                android:paddingBottom="4sp"
                android:scaleType="center"
                app:srcCompat="@mipmap/proximityimg"
                tools:ignore="ContentDescription" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/instruct"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/segoe_ui"
                android:gravity="center"
                android:paddingLeft="4sp"
                android:paddingTop="10sp"
                android:paddingRight="4sp"
                android:text="@string/instructTxt"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/instruct2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/segoe_ui"
                android:gravity="center"
                android:paddingLeft="4sp"
                android:paddingTop="10sp"
                android:paddingRight="4sp"
                android:text="@string/instructTxt2"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>